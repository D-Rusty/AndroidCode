<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_height="180dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.9"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/weather_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="xxxxx"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/weather_cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="3dp"
                android:text="xxxxxxxx1"
                android:layout_marginRight="5dp"

                />
          <TextView
            android:id="@+id/weather_tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginRight="5dp"
              android:textSize="16sp"
              android:layout_marginTop="3dp"
            android:text="xxxxxxxxxxxxxxx"
            />
        <TextView
            android:id="@+id/weather_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/weather_tmp"
            android:layout_alignBottom="@id/weather_tmp"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:text="xxxxxxxxxxxxxxxxx"
            />

        <TextView
            android:id="@+id/weather_astro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/weather_wind"
            android:layout_alignBottom="@id/weather_wind"
            android:text="xxxxxxxxxxxxxxxxx"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            />
        </LinearLayout>
            <ImageView
                android:id="@+id/weather_img"
                android:layout_weight="0.1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
               android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/ic_launcher"/>

    </LinearLayout>
</android.support.v7.widget.CardView>