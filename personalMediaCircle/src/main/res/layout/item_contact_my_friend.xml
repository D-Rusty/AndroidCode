<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/item_contact_my_friend_serion_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8"
        android:padding="2dp"
        android:text="A"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.hudong.wemedia.basiccomponent.widgets.SwipeItemLayout
            android:id="@+id/swipe_item"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:bga_sil_bottomMode="pullOut"
            app:bga_sil_springDistance="20dp"
            app:bga_sil_swipeDirection="left"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#38adff">

                <TextView
                    android:id="@+id/item_contact_my_friend_star"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="设为星标朋友"
                    android:textColor="#fff"
                    android:textSize="14sp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/act_contact_my_friend_relativrlayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                >

                <com.hudong.wemedia.ui.customView.CircleImageView
                    android:id="@+id/item_contact_my_friend_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/item_contact_my_friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/item_contact_my_friend_icon"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"/>



                <TextView
                    android:id="@+id/item_contact_my_friend_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/item_contact_my_friend_name"
                    android:layout_below="@id/item_contact_my_friend_name"
                    android:layout_marginTop="4dp"
                    android:textColor="#99000000"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/item_contact_my_friend_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/item_contact_my_friend_name"
                    android:layout_toRightOf="@id/item_contact_my_friend_company"
                    android:textColor="#99000000"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/item_contact_my_friend_industry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/item_contact_my_friend_name"
                    android:layout_below="@id/item_contact_my_friend_company"
                    android:layout_marginTop="4dp"
                    android:textColor="#99000000"
                    android:textSize="12sp"/>
                <CheckBox
                    android:id="@+id/activity_contact_my_friend_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </com.hudong.wemedia.basiccomponent.widgets.SwipeItemLayout>
    </LinearLayout>
</LinearLayout>