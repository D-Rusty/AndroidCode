<?xml version="1.0" encoding="utf-8"?>
<!--渐变透明度动画效果-->
<alpha xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500"
    android:fillAfter="false"
    android:fromAlpha="0.3"
    android:toAlpha="0.8" />


<!--
    fromAlpha:开始时透明度从 0.0 到 1.0 ，0.0 表示全透明，1.0 表示完全不透明
    toAlpha:  结束时透明度从 0.0 到 1.0 ，0.0 表示全透明，1.0 表示完全不透明
    duration: 动画持续时间
    fillAfter:设置动画结束后保持当前的位置,false 不返回到动画开始前的位置
 -->
