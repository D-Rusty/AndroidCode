<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_title"/>

    <ImageView
        android:id="@+id/interpolator_img"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_height="200dp" />

    <RadioGroup
        android:id="@+id/interpolator_rg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:gravity="center"
        android:layout_height="45dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:text="alpah"
            android:checked="true"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="wrap_content"
            android:text="scale"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="wrap_content"
            android:text="rotate"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="wrap_content"
            android:text="translate"
            android:layout_height="wrap_content" />

    </RadioGroup>
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/accelerate_decelerate_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:text="AccelerateDecelerateInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/accelerate_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:text="AccelerateInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/anticipate_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:text="AnticipateInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/anticipate_overshoot_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:text="AnticipateOvershootInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bounce_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:text="BounceInterpolator"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cycle_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:text="CycleInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/decelerate_tx"
            android:layout_width="match_parent"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:layout_margin="10dp"
            android:text="DecelerateInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/linear_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:text="LinearInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/overshoot_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:text="OvershootInterpolator"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/custom_tx"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:text="CustomInterpolator"
            android:background="#d2d2d2"
            android:padding="@dimen/padding_15"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>